package javaapplication2;

import java.util.ArrayList;
import java.util.List;

public class KadaneAl {
	public static void main(String[] args) {
		int[] arr = { 2, -1, 34, 1, -3, 6 };
		believeKad(arr);
	}

	private static void believeKad(int[] arr) {
		int mega_max = 0;
		List<Integer> mega_arr = new ArrayList<Integer>();
		int temp_max = 0;
		List<Integer> lis = new ArrayList<Integer>();
		for (int i = 0; i < arr.length; i++) {
			temp_max = temp_max + arr[i];
			lis.add(arr[i]);
			if (temp_max < 0) {
				temp_max = 0;
				lis.remove(arr[i]);
			}
			if (temp_max > mega_max) {
				mega_max = temp_max;
				mega_arr = lis;
			} else {
				temp_max = 0;
				lis = new ArrayList<Integer>();
			}
		}
		System.out.println(mega_max);
	}
}
